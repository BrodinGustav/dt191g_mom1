<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dt191g_mom1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dt191g_mom1.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white py-3">
        <div class="container">
            <h1>dt191g_mom1</h1>
        </div>
    </header>

    <!-- Main content area -->
    <div class="container-fluid">   <!--100% width för alla breakpoints-->
        <div class="row">
            
            <!-- Left column: Navigation.- Tar upp 3 kolumner av 12 -->
            <div class="col-md-3 bg-light p-3">
                <h3>Navigation</h3>
                <ul class="list-unstyled">

                    <!--Använder asp-page för att länka till Razor-sidor -->
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/Index">Start</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/Razor">Razor</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/About">Om sidan</a></li>
                </ul>
            </div>

            <!-- Right column: Välkomsttext.- Tar upp 9 kolumner av 12 -->
            <div class="col-md-9 p-3">
                <main role="main" class="pb-3">
                    @RenderBody() <!-- Här renderas huvudtexten från sidan -->
                </main>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            &copy; 2025 - dt191g_mom1 - <a class="text-white" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
