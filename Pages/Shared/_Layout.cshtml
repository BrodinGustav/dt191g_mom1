<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dt191g_mom1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dt191g_mom1.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- Header -->
    <header class="bg-primary text-white py-3">
        <!--Sätter en div till vänster, en till höger om sidan-->
        <div class="grid text-center" style="--bs-columns: 4; --bs-gap: 5rem; justify-content: space-around; display:block flex;align-items: center;">
            <div class="g-col-2"><h1>dt191g_mom1</h1></div>
            <div class="g-col-2 bg-gray"><p>Dagens datum är:  @Model.CurrentDateTime</p> <!--Hämtar in Dagens datum exkl tid-->
        </div>
    </header>

    <!-- Main content area -->
    <div class="container-fluid"> <!--100% width för alla breakpoints-->
        <div class="row">

            <!-- Left column: Navigation.- Tar upp 3 kolumner av 12 -->
            <div class="col-md-3 bg-light p-3">
                <h3>Navigation</h3>
                <ul class="list-unstyled">

                    <!--Använder asp-page för att länka till Razor-sidor -->
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/Index">Start</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/Razor">Razor</a></li>
                    <li><a class="nav-link text-dark" asp-area="" asp-page="/About">Om sidan</a></li>
                </ul>
            </div>

            <!-- Right column: Välkomsttext.- Tar upp 9 kolumner av 12 -->
            <div class="col-md-9 p-3">
                <main role="main" class="pb-3">
                    @RenderBody() <!-- Här renderas huvudtexten från sidan -->
                </main>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p>Av: Gustav Brodin -- Kontakta mig via epost: gueb0900@student.miun.se</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
